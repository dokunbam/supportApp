<EditForm Model="@Clients" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator/>
    @*<div class="modal fade" id="addClients" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">*@
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Client</h5>
                    @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>*@
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" form="ClientId" @bind="@Clients.ClientId" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" form="Name" @bind="@Clients.Name" class="form-control" />
                        <ValidationMessage For="@(()=>Clients.Name)" />
                    </div>

                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="email" form="Email" @bind="@Clients.Email" class="form-control" />
                        <ValidationMessage For="@(()=>Clients.Email)" />
                    </div>

                    <div class="form-group">
                        <label for="Phone">Phone</label>
                        <input type="text" form="Phone" @bind="@Clients.Phone" class="form-control" />
                        <ValidationMessage For="@(()=>Clients.Phone)" />
                    </div>


                    <div class="form-group">
                        <label for="Address">Address</label>
                        <input type="text" form="Address" @bind="@Clients.Address" class="form-control" />
                        <ValidationMessage For="@(()=>Clients.Address)" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-secondary">@ButtonText</button>
                    @*<button type="button" class="btn btn-primary">Cancel</button>*@
                </div>
            </div>
        @*</div>
    </div>*@
</EditForm>

@code {
    [Parameter] public Client Clients { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}
